                                </g>
                                <defs>
                                <clipPath id="clip0_7556_121">
                                    <rect width="20" height="20" fill="white" transform="translate(14.1426) rotate(45)"/>
                                </clipPath>
                                </defs>
                            </svg>

                        </div>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Main Hero",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id":"text",
      "label": "text",
      "default": "A patented door handle that protects your loved ones, blocks intruders, and keeps your home safe."
    },
   
    {
      "type": "image_picker",
      "id": "img",
      "label": "Background"
    },
    {
      "type": "image_picker",
      "id": "img_m",
      "label": "Background mobile"
    },
    {
      "type": "text",
      "id":"btn_name",
      "label":"button name",
      "default": "Join the waitlist"
    },
    {
        "type": "url",
        "label": "url",
        "id":"url"
    }
  ],
  "presets": [
    {
      "name": "Main Hero"
    }
  ]
}
{% endschema %}