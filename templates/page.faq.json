        "faq_item_CreDXr": {
          "type": "faq_item",
          "settings": {
            "heading": "What is your returns policy?",
            "text": "<p>aaa</p>"
          }
        },
        "faq_item_nAkkjf": {
          "type": "faq_item",
          "settings": {
            "heading": "Is there a user guide or installation manual?",
            "text": "<p>Yes. The handle comes with full instructions that include pre-checks, removal of your current handle, configuration of our handle if required, installation of the handle, and details of how to use all of the features.</p>"
          }
        },
        "faq_item_zmzCFh": {
          "type": "faq_item",
          "settings": {
            "heading": "Can I get help choosing the right version for my door?",
            "text": "<p>Yes, we can certainly help here. We would recommend first reviewing the details on the Installation.</p>"
          }
        }
